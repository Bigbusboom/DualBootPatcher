pkgname=jsoncpp
pkgver=1.8.0
pkgrel=1
pkgdesc="C++ library for interacting with JSON"
arch=(armv7 aarch64 x86 x86_64)
url="https://github.com/open-source-parsers/jsoncpp"
license=(MIT custom:Public_Domain)
source=("git+https://github.com/open-source-parsers/jsoncpp.git#tag=${pkgver}"
        'https://raw.githubusercontent.com/chenxiaolong/DualBootPatcher/v9.2.0/cmake/android.toolchain.cmake')
sha512sums=('SKIP'
            'f5599de8338d3664282298118b77b110cfc6fd6a18ad62d18d8011a7bac0e3034bef8be678a64ec244f80f25ad1f3603e6643016230fd8b8968bd83857eb19af')

build() {
    cd "${pkgname}"

    local abi api
    abi=$(android_get_abi_name)
    api=android-17

    mkdir -p "build_${abi}"
    cd "build_${abi}"

    local cxxflags='-fexceptions'

    cmake .. \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_CXX_FLAGS="${cxxflags}" \
        -DCMAKE_TOOLCHAIN_FILE="${srcdir}/android.toolchain.cmake" \
        -DANDROID_ABI="${abi}" \
        -DANDROID_PLATFORM="${api}" \
        -DJSONCPP_WITH_TESTS=OFF

    make
}

package() {
    cd "${pkgname}"

    local abi
    abi=$(android_get_abi_name)

    install -dm755 "${pkgdir}"/{lib,include}/
    cp -a include/. "${pkgdir}"/include/
    install -m644 "build_${abi}"/src/lib_json/libjsoncpp.a "${pkgdir}"/lib/
}
